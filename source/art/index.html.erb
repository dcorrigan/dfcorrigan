<main>
<% if focus_img ||= nil %>
  <%= partial("layouts/partials/focus_image") %>
<% end %>
<% data.images.each_with_index do |category_info, ind| %>
  <div class="container">
    <div class="art-head">
      <h2><%= category_info.title %></h2>
    </div>
    <ul class="thumb-grid">
      <% category_info.works.each do |img| %>
        <li>
          <a class="img-thumb" href="<%= art_route(category_info.title, img.title) %>">
            <img src="<%= art_thumb_for(img.num) %>" />
          </a>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
</main>
