<% wrap_layout :standard do %>
  <div class="blog container">
    <article class="post">
      <header>
        <h1 class="title is-1"><%= current_resource.title %></h1>
        <p class="byline subtitle"><%= formatted_date %></p>
      </header>
      <%= yield %>
      <hr>
      <footer>
        <div class="page-navigation">
          <% if current_article.previous_article %>
            <%= link_to("&laquo; Previous: <i>#{current_article.previous_article.title}</i>", current_article.previous_article.url, {class: 'prev'}) %>
          <% end %>
          <% if current_article.next_article %>
            Next: <%= link_to("Next: <i>#{current_article.next_article.title}</i> &raquo;", current_article.next_article.url, {class: 'next'}) %>
          <% end %>
          <hr>
        </div>
        <div class="block">
          <strong>Share:</strong>
          <a href="https://twitter.com/intent/tweet?text=<%= current_article.title %>&url=http://dfcorrigan.com<%= current_article.url %>"
             class="button"
             rel="nofollow"
             title="Click to share on Twitter"
             target="_blank">Twitter</a>
          <a href="https://www.tumblr.com/share"
             class="button"
             rel="nofollow"
             data-posttype="text"
             data-title="<%= current_article.title %>"
             title="Click to share on Tumblr"
             target="_blank">Tumblr</a>
          <a href="https://www.facebook.com/sharer/sharer.php?u=http://dfcorrigan.com<%= current_article.url %>"
             class="button"
             rel="nofollow"
             title="Click to share on Facebook"
             target="_blank">Facebook</a>
        </div>
      </footer>
    </article>
    <% content_for(:third_col) do %>
      <nav class="posts menu">
        <p class="menu-label">
          Recent Posts
        </p>
        <ul class="menu-list">
          <% blog.articles[0..5].each do |post| %>
            <li>
              <% link_to(post.url) do %>
                <span><%= format_date(post) %></span>
                <%= post.title %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </nav>
    <% end %>
  </div>
<% end %>
